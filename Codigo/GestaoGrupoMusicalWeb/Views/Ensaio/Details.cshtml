@model Core.DTO.EnsaioDetailsDTO

@{
    ViewData["Title"] = "Detalhes do Ensaio";
    ViewData["Ensaios"] = "Ensaios";
    Layout = "_LayoutColaborador";
}
<partial name="_Notificar" />

<div class="row">
    <div class="col-md-10 offset-md-1">
        <h1 class="p-3 bg-danger bg-opacity-75 text-white fs-5">@ViewData["Title"]</h1>
        <nav>
            <ol class="breadcrumb px-3">
                <strong>
                    <a class="text-danger text-opacity-75" asp-action="Index">@ViewData["Ensaios"]</a>
                    <span class="text-secondary"><i class="text-dark fa-sharp fa-solid fa-angle-right fa-xs"></i> Detalhes</span>
                </strong>
            </ol>
        </nav>
        <hr />
        <br />

        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-danger">Dados do Ensaio</h6>
                <a class="btn btn-outline-secondary btn-sm" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Voltar</a>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fa-solid fa-music fs-4 text-danger me-2"></i>
                        <h6 class="m-0 font-weight-bold text-danger">Informações do Ensaio</h6>
                    </div>
                    <hr class="text-danger mt-1 mb-3" style="width: 50px;">

                    <div class="row">
                        <!-- Coluna da Esquerda -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">@Html.DisplayNameFor(model => model.Tipo)</label>
                                <p class="form-control-plaintext fw-bold">@Html.DisplayFor(model => model.Tipo)</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted">@Html.DisplayNameFor(model => model.DataHoraInicio)</label>
                                <p class="form-control-plaintext fw-bold">@Model.DataHoraInicio?.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted">@Html.DisplayNameFor(model => model.DataHoraFim)</label>
                                <p class="form-control-plaintext fw-bold">@Model.DataHoraFim?.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted">@Html.DisplayNameFor(model => model.PresencaObrigatoria)</label>
                                <p class="form-control-plaintext fw-bold">@Html.DisplayFor(model => model.PresencaObrigatoria)</p>
                            </div>
                        </div>

                        <!-- Coluna da Direita -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted">@Html.DisplayNameFor(model => model.Local)</label>
                                <p class="form-control-plaintext fw-bold">@Html.DisplayFor(model => model.Local)</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted">@Html.DisplayNameFor(model => model.Regentes)</label>
                                @{
                                    if (Model.Regentes != null && Model.Regentes.Any())
                                    {
                                        <p class="form-control-plaintext fw-bold">@string.Join(", ", Model.Regentes)</p>
                                    }
                                    else
                                    {
                                        <p class="form-control-plaintext fw-bold fst-italic">Nenhum regente alocado.</p>
                                    }
                                }
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted">@Html.DisplayNameFor(model => model.Repertorio)</label>
                                <p class="form-control-plaintext fw-bold">@Html.DisplayFor(model => model.Repertorio)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-end">
            </div>
        </div>
    </div>
</div>
