@model GestaoGrupoMusicalWeb.Models.InstrumentoMusicalViewModel

@{
    ViewData["Title"] = "Adicionar Instrumento";
    ViewData["InstrumentoMusical"] = "Instrumento";
    ViewData["Create"] = "Novo";
}
<partial name="_Notificar">

    <div class="row">
        <div class="col-md-10 col-lg-6">
            <h1 class="p-3 bg-danger  bg-opacity-75 text-white fs-5">Novo Instrumento</h1>
            <nav>
                <ol class="breadcrumb px-3">
                    <strong>
                        <a class="text-danger text-opacity-75" asp-action="Index">@ViewData["InstrumentoMusical"]</a>
                        <span class="text-secondary"><i class="text-dark fa-sharp fa-solid fa-angle-right fa-xs"></i> @ViewData["Create"]</span>
                    </strong>
                </ol>
            </nav>
            <hr />
            <br />


            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="container">
                    <div class="row d-flex justify-content-between ">
                        <div class="form-group col-md-5">
                            <label asp-for="Patrimonio" class="control-label"></label>
                            <input asp-for="Patrimonio" class="form-control" />
                            <span asp-validation-for="Patrimonio" class="text-danger"></span>
                        </div>
                        <div class="form-group  col-md-6">
                            <label asp-for="DataAquisicao" class="control-label"></label>
                            <input asp-for="DataAquisicao" class="form-control" />
                            <span asp-validation-for="DataAquisicao" class="text-danger"></span>

                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row d-flex justify-content-between">
                        <div class="form-group  col-md-5">
                            <label asp-for="IdTipoInstrumento" class="control-label"></label>
                            <select asp-for="IdTipoInstrumento" asp-items="@Model.ListaInstrumentos" class="form-select"></select>
                            <span asp-validation-for="IdTipoInstrumento" class="text-danger"></span>
                        </div>
                        <div class="form-group  col-md-6">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="DISPONIVEL">Disponível</option>
                                <option value="DANIFICADO">Danificado</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <br />
                <div class="container">
                    <div class="row">
                        <div class="col-5"></div>
                        <input type="submit" value="Adicionar" class="btn btn-secondary d-grid gap-2 col-3 mx-auto" />
                        <a class="btn btn-light text-secondary border border-secondary d-grid gap-2 col-3 mx-auto" asp-action="Index"> Voltar </a>
                        
                    </div>
                </div>
            </form>
        </div>


    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
