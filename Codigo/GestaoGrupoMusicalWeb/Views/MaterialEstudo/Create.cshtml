@model GestaoGrupoMusicalWeb.Models.MaterialEstudoViewModel
<link href="~/lib/datatable/css/datatables.min.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Adicionar Material de Estudo";
    ViewData["Materialestudo"] = "Material de Estudo";
    ViewData["Create"] = "Novo";
}

<partial name="_Notificar">
    <div class="row">
        <div class="col-md-10 col-lg-6">
            <h1 class="p-3 bg-danger  bg-opacity-75 text-white fs-5">Novo Material Estudo</h1>
            <nav>
                <ol class="breadcrumb px-3">
                    <strong>
                        <a class="text-danger text-opacity-75" asp-action="Index">@ViewData["Materialestudo"]</a>
                        <span class="text-secondary"><i class="text-dark fa-sharp fa-solid fa-angle-right fa-xs"></i> @ViewData["Create"]</span>
                    </strong>
                </ol>
            </nav>
            <hr />
            <br />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="container">
                    <div class="row d-flex justify-content-between ">
                        <div class="form-group col-md-12">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-between">
                        <div class="form-group col-md-12">
                            <label asp-for="Link" class="control-label"></label>
                            <textarea asp-for="Link" class="form-control" maxlength="500" id="linkTextArea" oninput="updateCharacterCount()"></textarea>
                            <span asp-validation-for="Link" class="text-danger"></span>
                            <small id="characterCount">0/500</small>
                        </div>
                    </div>
                </div>
                <br />
                <div class="container">
                    <div class="row">
                        <div class="col-5"></div>
                        <input type="submit" value="Adicionar" class="btn btn-secondary d-grid gap-2 col-3 mx-auto" />
                        <a class="btn btn-light text-secondary border border-secondary d-grid gap-2 col-3 mx-auto" asp-action="Index"> Voltar </a>
                        
                    </div>
                </div>
            </form>
        </div>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <script>
        function updateCharacterCount() {
            var textArea = document.getElementById('linkTextArea');
            var charCount = textArea.value.length;
            var charLimitFromGrupoMusical = textArea.maxLength;
            document.getElementById('characterCount').innerText = charCount + '/' + charLimitFromGrupoMusical;
        }

        document.addEventListener('DOMContentLoaded', function () {
            updateCharacterCount();
        });
    </script>