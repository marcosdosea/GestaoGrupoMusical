@model GestaoGrupoMusicalWeb.Models.PagamentoAssociadoViewModel

@{
    ViewData["Title"] = "Pagamentos dos Associados";

    // A lista de seleção para o dropdown de status
    var statusList = new List<SelectListItem>
    {
        new SelectListItem { Value = "NAO_PAGOU", Text = "Não Pagou" },
        new SelectListItem { Value = "PAGO", Text = "Pagou" },
        new SelectListItem { Value = "PAGO_COMPROVANTE", Text = "Pagou e enviou comprovante" },
        new SelectListItem { Value = "ISENTO", Text = "Isento" }
    };
}

<partial name="_Notificar" />

<div class="card">
    <div class="card-header bg-danger bg-opacity-75 text-white">
        <h5 class="card-title mb-0">@ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        @if (Model.Financeiro != null)
        {
            <div class="row mb-3 p-2" style="background-color: #f8f9fa; border-radius: 5px; border: 1px solid #dee2e6;">
                <div class="col-md-6">
                    <strong>Descrição do Pagamento:</strong> @Model.Financeiro.Descricao
                </div>
                <div class="col-md-3">
                    <strong>Data Início:</strong> @Model.Financeiro.DataInicio
                </div>
                <div class="col-md-3">
                    <strong>Data Vencimento:</strong> @Model.Financeiro.DataFim
                </div>
            </div>
        }

        <form asp-action="Pag_Associados">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="IdReceita" />

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="bg-secondary text-white">
                        <tr>
                            <th>Associado</th>
                            <th>CPF</th>
                            <th style="width: 170px;">Data Pagamento</th>
                            <th style="width: 160px;">Valor Pago (R$)</th>
                            <th>Observações</th>
                            <th style="width: 260px;">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Associados != null && Model.Associados.Any())
                        {
                            for (int i = 0; i < Model.Associados.Count; i++)
                            {
                                <tr class="align-middle">
                                    <td>
                                        @Model.Associados[i].NomeAssociado
                                        <input type="hidden" asp-for="Associados[i].IdAssociado" />
                                        <input type="hidden" asp-for="Associados[i].NomeAssociado" />
                                        <input type="hidden" asp-for="Associados[i].Cpf" />
                                    </td>
                                    <td>
                                        @Model.Associados[i].Cpf
                                    </td>
                                    <td>
                                        @{
                                            var dataValue = Model.Associados[i].DataPagamento == DateTime.MinValue ? "" : Model.Associados[i].DataPagamento.ToString("yyyy-MM-dd");
                                        }
                                        <input type="date" name="Associados[@i].DataPagamento" value="@dataValue" class="form-control" />
                                    </td>
                                    <td>
                                        <input type="number" step="0.01" asp-for="Associados[i].ValorPago" class="form-control" placeholder="0,00" />
                                    </td>
                                    <td>
                                        <textarea asp-for="Associados[i].Observacoes" class="form-control" rows="1"></textarea>
                                    </td>
                                    <td>
                                        <select asp-for="Associados[i].Status" asp-items="@(new SelectList(statusList, "Value", "Text", Model.Associados[i].Status))" class="form-select"></select>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">Nenhum associado ativo encontrado.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="row d-flex flex-column-reverse gap-2 mx-auto flex-xl-row mt-4">

                <div class="col-xl-8 d-none d-xl-block"></div>

                <div class="col-xl d-grid">
                    <a class="btn btn-light text-secondary border border-secondary" asp-action="Index">Cancelar</a>
                </div>

                <div class="col-xl d-grid">
                    <button type="submit" class="btn btn-secondary d-grid gap-2 col-sm">Salvar Pagamentos</button>
                </div>

            </div>
        </form>
    </div>
</div>