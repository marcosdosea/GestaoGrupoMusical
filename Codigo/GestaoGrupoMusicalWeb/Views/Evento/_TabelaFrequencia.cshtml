@model List<Core.DTO.EventoListaFrequenciaDTO>

<form asp-controller="Evento" asp-action="RegistrarFrequencia">
    <div class="table-responsive">
        <table class="table mt-3">
            <thead>
                <tr class="bg-danger bg-opacity-75 text-white">
                    <th>
                        @Html.DisplayNameFor(model => model[0].Cpf)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].NomeAssociado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Justificativa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].Presente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].JustificativaAceita)
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr class="border-bottom border-danger border-opacity-75 align-middle">
                        <td>
                            @Html.HiddenFor(x => x[i].IdEvento)
                            @Html.HiddenFor(x => x[i].IdPessoa)
                            @Model[i].Cpf
                        </td>
                        <td>
                            @Model[i].NomeAssociado
                        </td>
                        <td>
                            @Model[i].Justificativa
                        </td>
                        <td>
                            @Html.CheckBoxFor(x => x[i].Presente, new { @class = "form-check-input my-3" })
                        </td>
                        <td>
                            @Html.CheckBoxFor(x => x[i].JustificativaAceita, new { @class = "form-check-input" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (!Model.Any())
        {
            <p class="text-center mt-4 mb-0">Desculpe, nenhuma frequência encontrada :(</p>
        }
    </div>
    <div class="d-flex justify-content-md-end justify-content-between gap-2 mt-3">
        <a class="btn btn-outline-secondary col-lg-2 col-md-4 col-5" asp-controller="Evento" asp-action="Index">Voltar</a>
        <button class="btn btn-secondary col-lg-2 col-md-4 col-5" type="submit">Salvar</button>
    </div>
</form>

