@model IEnumerable<Core.DTO.EventoAssociadoDTO>
@{
    ViewData["Title"] = "Eventos";
    Layout = "_LayoutAssociado";
}

<partial name="_Notificar">

    <div class="container">
        <h1 class="fs-5 mb-4">@ViewData["Title"]</h1>
        <div class="table-responsive">
            <table class="table accordion mt-3">
                <thead>
                    <tr class="bg-danger bg-opacity-75 text-white">
                        <th class="col-md-1">
                            @Html.DisplayNameFor(model => model.Local)
                        </th>
                        <th class="col-md-1">
                            @Html.DisplayNameFor(model => model.Inicio)
                        </th>
                        <th class="col-md-1">
                            @Html.DisplayNameFor(model => model.Fim)
                        </th>
                        <th class="col-md-1">
                            @Html.DisplayNameFor(model => model.Presente)
                        </th>
                        <th class="col-md-2">
                            @Html.DisplayNameFor(model => model.Justificativa)
                        </th>
                        <th class="col-md-2">
                            @Html.DisplayNameFor(model => model.JustificativaAceita)
                        </th>
                        <th class="col-md-4">
                            Ações
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="border-bottom border-danger border-opacity-75 align-middle">
                            <td>
                                @item.Local
                            </td>
                            <td>
                                @item.Inicio
                            </td>
                            <td>
                                @item.Fim
                            </td>
                            <td>
                                @(item.Presente ? "Sim" : "Não")
                            </td>
                            <td>
                                @item.Justificativa
                            </td>
                            <td>
                                @(item.JustificativaAceita ? "Sim" : "Não")
                            </td>
                            <td>
                                <a data-bs-toggle="collapse"
                                   data-bs-target="#accordion_@(item.IdEvento)"
                                   role="button"
                                   class="btn btn-secondary btn-sm dropdown-toggle my-3">
                                    <i class="fa-solid fa-music"></i>
                                    Repertório
                                </a>
                                <a class="btn btn-secondary btn btn-sm" role="button" asp-controller="Evento" asp-action="JustificarAusencia" asp-route-idEnsaio="@item.IdEvento">
                                    <i class="fa-solid fa-outdent"></i>
                                    Justificar Ausência
                                </a>
                            </td>
                        </tr>
                        <tr class="collapse accordion-collapse border-danger border-opacity-75" id="accordion_@(item.IdEvento)">
                            <td colspan="12">
                                <div>
                                    <p>@Html.DisplayNameFor(model => model.Repertorio)</p>
                                    @item.Repertorio
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Any())
            {
                <p class="text-center mt-4 mb-0">Desculpe, nenhum <b>Evento</b> encontrado :(</p>
            }
        </div>
    </div>
